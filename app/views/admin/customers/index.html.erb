<%= render 'layouts/admin-header' %>
<div class="container">

  <h3 class="mb-3 mt-3">顧客一覧</h3>


  <table class="table">
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>会員登録日時</th>
      <th>退会ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= link_to admin_customer_path(customer.id) do %><%= customer.id %><% end %></td>
      <td><%= customer.last_name %><%= customer.first_name %></td>
      <td><%= customer.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      <td><%= customer.is_deleted ? '退会' : '会員'%></td>
    </tr>
    <% end %>
  </table>

</div>