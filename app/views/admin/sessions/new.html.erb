<div class="container">


  <div class="row mb-5 justify-content-center">
    <h3>Log in</h3>
  </div>


  <%= form_with model: @admin, url: admin_session_path do |f| %>

    <div class="row justify-content-center">
      <label for="admin_email" class="col-11 col-sm-8 col-md-5 col-form-label">メールアドレス</label>
    </div>
    <div class="row justify-content-center">
      <div class="col-11 col-sm-8 col-md-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %></div>
    </div>


    <div class="row mt-3 justify-content-center">
     <label for="admin_email" class="col-11 col-sm-8 col-md-5 col-form-label">パスワード</label>
    </div>
    <div class="row justify-content-center">
      <div class="col-11 col-sm-8 col-md-5"><%= f.password_field :password, autocomplete: "current-password", class: "col-12" %></div>
    </div>



    <div class="row mt-5 justify-content-center">
      <%= f.submit "ログイン", class: "btn btn-sm btn-primary px-4 py-1" %>
    </div>

  <% end %>

</div>


