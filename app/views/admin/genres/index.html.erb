<%= render 'layouts/admin-header' %>

<div class="container">

  <h3 class="mb-3 mt-3">ジャンル</h3>

  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>

    <label for="genre[name]">ジャンル追加</label>
    <%= f.text_field :name, autofocus: true, required: true%>
    <%= f.submit '保存' %>

  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>ジャンルID</th>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.id %></td>
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
          <!--<td><%#= link_to '削除', admin_genre_path(genre.id), class: "btn btn-danger", method: :delete, data: {confirm: "削除しますか？"} %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>

</div>