<h1>ジャンル</h1>


<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>

<label for="genre[name]">ジャンル追加</label>

  <%= f.text_field :name, autofocus: true, required: true%>

  <%= f.submit '保存' %>

<% end %>

<table class="table">
<% @genres.each do |genre| %>

<tbody>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to edit_admin_genre_path(genre.id), class: "btn btn-primary" do %>編集<% end %></td>
    <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, data: {confirm: "削除しますか？"} %></td>
  </tr>
</tbody>

<% end %>
</table>