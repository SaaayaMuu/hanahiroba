<div class="container">

  <h3 class="mb-3 mt-3">ジャンル</h3>




<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>

  <label for="genre[name]">ジャンル追加</label>

  <%= f.text_field :name, autofocus: true, required: true%>

  <%= f.submit '保存' %>

<% end %>

<table class="table">
<% @genres.each do |genre| %>

<tbody>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to edit_admin_genre_path(genre.id), class: "btn btn-primary" do %>編集<% end %></td>
    <td><%= link_to admin_genre_path(genre.id), class: "btn btn-danger", method: :delete, data: {confirm: "削除しますか？"} do %>削除<% end %></td>
  </tr>
</tbody>

<% end %>
</table>

</div>