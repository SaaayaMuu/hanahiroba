<style>
.btn-purple {
  color: white;
  background: #6A5ACD;
  transition: 0.5s;
}
.btn-purple:hover {
  color: white;
  background: #4B0082;
  transition: 0.5s;
}
.btn-red  {
  color: white;
  background: #A52A2A;
  transition: 0.5s;
}
.btn-red:hover {
  color: white;
  background: #770000;
  transition: 0.5s;
}
.btn-back {
  color: white;
  background: #777777;
  margin: 0 auto;
  transition: 0.5s;
  margin-bottom: 10px;
}
.btn-back:hover {
  color: white;
  background: #444444;
  transition: 0.5s;
}
@media screen and (max-width: 425px) {
  h2 {
    font-size: 20px;
  }
}
</style>

<%= render 'layouts/header', genre: @genre %>
<div class="body">
  <div class="container">

    <h2 class="my-5 text-center">マイページ</h2>

    <div class="row justify-content-center mb-3">
      <h5>登録情報編集</h5>
    </div>

    <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
      <div class="row justify-content-center">

        <div>
          <div class="mb-3">
            <h5>氏名</h5>
            <%= f.text_field :last_name, autofocus: true, required: true, class: "text-secondary" %>
            <%= f.text_field :first_name, required: true, class: "text-secondary" %>
          </div>

          <div class="mb-3">
            <h5>カナ</h5>
            <%= f.text_field :last_name_kana, required: true, class: "text-secondary" %>
            <%= f.text_field :first_name_kana, required: true, class: "text-secondary" %>
          </div>
          <div class="mb-3">
            <h5>郵便番号</h5>
            <%= f.text_field :postal_code, size: "42x10", required: true, class: "text-secondary" %>
          </div>
          <div class="mb-3">
            <h5>住所</h5>
            <%= f.text_area :address, size: "42x3", required: true, class: "text-secondary" %>
          </div>
          <div class="mb-3">
            <h5>電話番号</h5>
            <%= f.text_field :telephone_number, size: "42x10", required: true, class: "text-secondary" %>
          </div>
          <div class="mb-3">
            <h5>メールアドレス</h5>
            <%= f.email_field :email, size: "42x10", required: true, class: "text-secondary" %>
          </div>
        </div>
      </div>

      <p class="text-center mt-3"><%= f.submit "保存", class: "btn btn-sm btn-purple px-4 py-1" %></p>
    <% end %>
    <p class="text-center mt-3"><%= link_to customer_path(current_customer), class: "btn btn-sm btn-back px-4 py-1" do %>戻る<% end %></p>
    <p class="text-center mt-5"><%= link_to customers_unsubscribe_path, class: "btn btn-sm btn-red px-2 py-1" do %>退会する<% end %></p>

</div>
</body>