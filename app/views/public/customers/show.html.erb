<%= render 'layouts/header' %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <p class="my-4">
        <span class="lead px-3">マイページ</span>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <p>
        <span class="font-weight-bold">登録情報</span>
        <%= link_to edit_customer_path, class: "btn btn-success ml-2" do %>編集する<% end %>
      </p>

      <table class="table table-bordered">
        <tr>
          <th class="title "width=150"">氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="title">カナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
         <tr>
          <th class="title">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="title">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="title">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="title">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <p>
        <span class="font-weight-bold">注文履歴</span>
        <%= link_to orders_path, class: "btn btn-primary ml-2" do %>一覧を見る<% end %>
      </p>
    </div>
  </div>
</div>