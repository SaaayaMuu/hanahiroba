<style>
table {
  font-size: min(1.5vw,16px);
}
table img {
  width: 80px;
}
.btn-back {
  color: white;
  background: #777777;
  margin: 0 auto;
  transition: 0.5s;
  margin-bottom: 10px;
}
.btn-back:hover {
  color: white;
  background: #444444;
  transition: 0.5s;
}

.btn-red  {
  color: white;
  background: #A52A2A;
  transition: 0.5s;
}
.btn-red:hover {
  color: white;
  background: #770000;
  transition: 0.5s;
}
.btn-blue {
	color: white;
  background: #006699;
  margin: 0 auto;
  transition: 0.5s;
  margin-bottom: 10px;
}
.btn-blue:hover {
	background: #000099;
	color: white;
  transition: 0.5s;
}
.btn-purple {
  color: white;
  background: #6A5ACD;
  transition: 0.5s;
}
.btn-purple:hover {
  color: white;
  background: #4B0082;
  transition: 0.5s;
}

@media screen and (max-width: 576px) {
  table img {
    width: 50px;
  }
}
</style>

<%= render 'layouts/header', genre: @genre %>


<div class="body">
<%= render 'public/shared/custom_error_messages' %>

<div class="container">
	<h2 class="my-5 text-center">ショッピングカート</h2>

	<% if @cart_items.first %>
		<div class="text-right">
			<%= link_to "カートを空にする", cart_items_path, method: :delete, "data-confirm" => "カートを空にします。よろしいでしょうか？", class: "btn btn-red mb-3 mr-2" %>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @cart_items.each do |cart_item| %>
					<tr>
						<td><%= image_tag cart_item.item.image %></td>
						<td class="align-middle"><%= cart_item.item.design.design_name %></td>
						<td class="align-middle"><%= cart_item.item.with_tax_price %>円</td>
						<td class="align-middle">
							<%= form_with model: cart_item, url: cart_item_path(cart_item.id), local: true, method: :patch do |f| %>
								<%= f.select :amount, [*(1..10)], {include_blank: false}, id: "cart_item_amount_#{cart_item.id}" %>
								<%= f.submit "変更", class: "btn btn-sm btn-back", id: "submit_for_cart_item_#{cart_item.id}" %>
							<% end %>
						</td>
						<td class="align-middle"><%= cart_item.subtotal %>円</td>
						<td class="text-center align-middle">
							<%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "#{cart_item.item.design.design_name}をカートから削除します。よろしいでしょうか？", class: "btn btn-sm btn-red" %>
						</td>
					</tr>
				<% end %>
				<tr>
					<td></td>
					<td></td>
					<td></td>
					<td>合計金額</td>
					<td><%= @cart_items.sum(&:subtotal) %>円</td>
					<td></td>
				</tr>
			</tbody>
		</table>
		<div class="row justify-content-center">
		  <%= link_to "買い物を続ける", designs_path, class: "btn btn-blue" %>
		</div>
		<div class="text-center">
			<%= link_to "注文情報入力に進む", new_order_path, class: "btn btn-purple" %>
		</div>

	<% else %>
		<div class="text-center">
			<h5 class="my-5">カート内に商品がありません。</h5>
			<%= link_to "商品一覧を見る", designs_path, class: "btn btn-blue" %>
		</div>
	<% end %>
</section>

</div>
