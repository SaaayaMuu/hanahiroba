<%= render 'layouts/header', genre: @genre %>


<div class="body">
<%= render 'public/shared/custom_error_messages' %>

<div class="container">
	<h2 class="my-5 text-center">ショッピングカート</h2>

	<% if @cart_items.first %>
		<div class="text-right">
			<%= link_to "カートを空にする", cart_items_path, method: :delete, "data-confirm" => "カートを空にします。よろしいでしょうか？", class: "btn btn-danger mb-3 mr-2" %>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @cart_items.each do |cart_item| %>
					<tr>
						<td><%= image_tag cart_item.item.image.variant(resize: "100x100") %></td>
						<td><%= cart_item.item.design.design_name %></td>
						<td><%= cart_item.item.with_tax_price %>円</td>
						<td>
							<%= form_with model: cart_item, url: cart_item_path(cart_item.id), local: true, method: :patch do |f| %>
								<%= f.select :amount, [*(1..10)], {include_blank: false}, id: "cart_item_amount_#{cart_item.id}" %>
								<%= f.submit "変更", class: "btn btn-primary", id: "submit_for_cart_item_#{cart_item.id}" %>
							<% end %>
						</td>
						<td><%= cart_item.subtotal %>円</td>
						<td class="text-center">
							<%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "#{cart_item.item.design.design_name}をカートから削除します。よろしいでしょうか？", class: "btn btn-danger" %>
						</td>
					</tr>
				<% end %>
				<tr>
					<td></td>
					<td></td>
					<td></td>
					<td>合計金額</td>
					<td><%= @cart_items.sum(&:subtotal) %>円</td>
					<td></td>
				</tr>
			</tbody>
		</table>
		<div class="row justify-content-center">
		  <%= link_to "買い物を続ける", designs_path, class: "btn btn-success" %>
		</div>
		<div class="text-center">
			<%= link_to "注文情報入力に進む", new_order_path, class: "btn btn-success" %>
		</div>

	<% else %>
		<div class="text-center">
			<h4 class="my-5">カート内に商品がありません。</h4>
			<%= link_to "商品一覧を見る", designs_path, class: "btn btn-primary" %>
		</div>
	<% end %>
</section>

</div>