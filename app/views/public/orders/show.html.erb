<body>
  <%= render 'layouts/header' %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <p class="my-4">
          <span class="lead px-3">注文履歴一覧</span>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-xl-6 col-lg-7 col-md-10 col-sm-12">
      <span class="font-weight-bold">注文情報</span>
      <table class="table table-bordered">
        <tr><th class="title">注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr><th class="title">配送先</th><td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td></tr>
        <tr><th class="title">支払い方法</th><td><%= "ふりこみ" %><%#= @order.payment_method_i18n %></td></tr>
      </table>
      </div>
    </div>

    <div class="row">
      <div class="col-xl-7 col-lg-8 col-md-10 col-sm-12">
        <span class="font-weight-bold">注文内容</span>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価(税込)</th>
              <th>個数</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= image_tag order_detail.item.image.variant(resize: "100x100") %><%= order_detail.item.design.design_name %></td>
              <td><%= order_detail.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.price*order_detail.amount %></td>
              <td><%= order_detail.making_status %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-7">
      <span class="font-weight-bold">請求情報</span>
      <table class="col-xl-1 col-lg-1 col-md-0"></table>
      <table class="table table-bordered">
        <tr><th class="title "width=110"">商品合計</th><td class="body" width=90""><%= @order.total_price - @order.postage %></td></tr>
        <tr><th class="title">配送料</th><td><%= @order.postage %></td></tr>
        <tr><th class="title">ご請求額</th><td><%= @order.total_price %></td></tr>
      </table>
    </div>
    </div>

  </div>
</body>