<%= render 'layouts/header', genre: @genre %>
<div class="body">
  <div class="container">


    <div class="row justify-content-center mb-3">
      <h5>注文履歴一覧</h5>
    </div>

    <div class="row">
      <div class="col-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>製作状況</th>
              <th>注文詳細</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td class="align-middle">
                <%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>

              <td class="align-middle"><% order.order_details.each do |order_detail| %>
                <%= image_tag order_detail.item.image.variant(resize: "100x100") %><%= order_detail.item.design.design_name %><br>
                <% end %>
              </td>

              <td class="align-middle"><%= order.total_price.to_s(:delimited) %><%= "円" %></td>
              <td class="align-middle"><%= order.making_status_i18n %></td>
              <td class="align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary text-light" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>