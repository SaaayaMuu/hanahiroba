<%= render 'layouts/header', genre: @genre %>
<div class="body">
  <div class="container">

    <div class="order-new-box">
    <h5 class="text-center mb-5">注文情報入力(お届け先)</h5>
    <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
      <div class="mb-5">
        <%= f.radio_button :select_address, "0" , {required: true}%>
        <%= f.label :select_address_0, "ご自身の住所" %>
        <div class="ml-4">
          <%= "〒" %><%= @customer.postal_code %><%= "  " %><%= @customer.address %><br>
          <%= @customer.full_name %>
        </div>
      </div>

      <div class="mb-5">
        <%= f.radio_button :select_address, "1" %>
        <%= f.label :select_address_1, "過去のお届け先履歴から選択" %>
        <div calss="ml-4">
          <%= f.select :address_id, options_from_collection_for_select(@customer.addresses.all, :id, :address_display) %>
        </div>
      </div>

      <div class=" mt-3">
        <%= f.radio_button :select_address, "2" %>
        <%= f.label :select_address_2, "新しいお届け先を登録" %>
        <div class="row ml-4">
          <label for="inputPostalCode" class="p-0 col-sm-4 col-lg-3 col-xl-3 col-form-label">郵便番号(ハイフンなし)</label>
          <div class="col-sm-8 col-lg-5 col-xl-5 col-md-7">
            <%= f.text_field :postal_code, autofocus: true, id:"postal_code", placeholder: "0000000"%>
          </div>
        </div>
        <div class="row ml-4">
          <label for="inputAddress" class="p-0 col-sm-4 col-lg-3 col-xl-3 col-form-label">住所</label>
          <div class="col-sm-8 col-lg-5 col-xl-5 col-md-7">
            <%= f.text_area :address, autofocus: true, id:"address", placeholder: "東京都渋谷区代々木", :size => "30%" %>
          </div>
        </div>
        <div class="row ml-4 mb-5">
          <label for="inputName" class="p-0 col-sm-4 col-lg-3 col-xl-3 col-form-label">宛名</label>
          <div class="col-sm-8 col-lg-5 col-xl-5 col-md-7">
            <%= f.text_field :name, autofocus: true, id:"name", placeholder: "令和道子" %>
          </div>
        </div>
      </div>

      <div class="row justify-content-center">
        <%= f.submit "確認画面へすすむ", class: "btn btn-purple px-4 py-2" %>
      </div>
    <% end %>
    </div>
  </div>
</div>